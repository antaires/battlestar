{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "Run Sketch",
            "type": "shell",
            "group": {
            "kind": "build",
            "isDefault": true
            },
            "command": "${config:processing.path}",
            "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated"
            },
            "args": [
            "--force",
            "--sketch=${workspaceRoot}/SwarmWars",
            "--output=${workspaceRoot}/out",
            "--run"
            ],
            "windows": {
            "args": [
                "--force",
                "--sketch=${workspaceRoot}\\SwarmWars",
                "--output=${workspaceRoot}\\out",
                "--run"
            ]
            }
        }
    ]
}